
{{#*inline "repoItem"}}
  <section class="centered-box">
    {{repoKind}}
    <ul>
      {{#each repos as |repo|}}
        <li {{#unless repo.is_active}} class="inactive" {{/unless}}>
          <div>
            <span class="color-circle" style="background-color: #{{repo.color}}"></span>
          </div>
          <div class="name">
            <a href="/dashboard/{{ repo.uuid }}">{{repo.name}}</a>
          </div>
          <div class="settings-link">
            <a href="/dashboard/{{ repo.uuid }}/settings">
              <img src="/static/settings.svg">
            </a>
          </div>
        </li>
      {{/each}}
    </ul>
  </section>
{{/inline}}

<nav class="top-nav">
  {{#if user.isAdminUser}}
    <a href="/status">Status</a>
  {{else}}
    <span class="with-tooltip">
      Status
      <div class="tooltip left-below">Login as Admin to view system status</div>
    </span>
  {{/if}}
  <div class="spacer"></div>
  <span>{{ chooseTruthy user.preferred_username user.name 'User' }}</span>
  <a href="/logout">Logout</a>
</nav>

<main class="repos centered-boxes-layout">
  <div class="wrapper">
    <div class="title">
      <h1>Repos</h1>
      <span>
        {{#if user.isAdminUser}}
          <a href="/repos/new">New</a>
        {{else}}
          <span class="with-tooltip">
            New
            <div class="tooltip">Login as Admin to add a repo</div>
          </span>
        {{/if}}
      </span>
    </div>

    {{> repoItem repos=favoriteRepos repoKind="Favorites"}}

    {{> repoItem repos=activeRepos repoKind="Active"}}
    
    {{> repoItem repos=inactiveRepos repoKind="Inactive"}}

  </div>
</main>
